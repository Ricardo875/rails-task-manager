<h1>Edit task</h1>
<%= form_for(@task) do |t| %>
  <p><%= t.label :title %>
  <%= t.text_field :title %></p>
  <p><%= t.label :details %>
  <%= t.text_field :details %></p>
  <p><%= if @task.completed == true
  "Uncheck if task is not completed"
  else
    "Check if task is completed"
    end %>
  <%= t.check_box :completed %></p>
  <p><%= t.submit %></p>
<% end %>

<p><%= link_to "Back to list", "/tasks" %></p>
